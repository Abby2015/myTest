<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yum.kfc.brand.bnbjc1508.dao.Bnbjc1508UserMapper">
	<insert id="insert" parameterType="com.yum.kfc.brand.bnbjc1508.pojo.Bnbjc1508User">
		INSERT INTO bnbjc1508_user ([userId],[nickName],[sex],[province],[city],[firstTime]) 
		VALUES (#{userId},#{nickName},#{sex},#{province},#{city}, #{firstTime})
	</insert>
	
	<select id="getNickName" parameterType="String" resultType="String">
		select top 1 nickName from bnbjc1508_user with(nolock) where userId=#{userId}
    </select>
    
    <select id="getUserCount" parameterType="String" resultType="int">
		select count(*) from bnbjc1508_user with(nolock) where userId=#{userId}
    </select>
</mapper>