<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yum.kfc.brand.camp1504.dao.FooldayAnswerMapper">
	
	<insert id="insert" parameterType="com.yum.kfc.brand.camp1504.pojo.FooldayAnswer">
		INSERT INTO foolday_answer
			([id],[openId],[userId],[questionId],[isCorrect],[choice],[answerTime],[tagContent],[recycleCount])
		VALUES
			(#{id},#{openId},#{userId},#{questionId},#{isCorrect},#{choice},#{answerTime},#{tagContent},#{recycleCount})
	</insert>
	
	<select id="getAnswerCount" resultType="int">
		select count(*) from foolday_answer where userId=#{userId} and openId=#{openId} and recycleCount=#{recycleCount}
    </select>
	
	<select id="getTagContent" parameterType="String" resultType="String">
		select tagContent from foolday_answer where id=#{answerId}
    </select>
    
</mapper>