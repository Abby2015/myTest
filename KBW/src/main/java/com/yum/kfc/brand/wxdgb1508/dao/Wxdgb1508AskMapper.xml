<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yum.kfc.brand.wxdgb1508.dao.Wxdgb1508AskMapper">
	<insert id="insert" parameterType="com.yum.kfc.brand.wxdgb1508.pojo.Wxdgb1508Ask">
		INSERT INTO wxdgb1508_ask
			([id],[openId],[userId],[channelType],[deviceType],[tagContent],[loveOption],[loveContent],[result],[askTime])
		VALUES
			(#{id},#{openId},#{userId},#{channelType},#{deviceType},#{tagContent},#{loveOption},#{loveContent},#{result},#{askTime})
	</insert>
	
	<select id="getTagContent" parameterType="String" resultType="String">
		select tagContent from wxdgb1508_ask with(nolock) where id=#{askId}
    </select>
    
    <select id="isSendLove" parameterType="String" resultType="long">
		select count(*) from wxdgb1508_ask with(nolock) where userId=#{userId}
    </select>
    
    <select id="getLoveContent" parameterType="String" resultType="com.yum.kfc.brand.wxdgb1508.pojo.Wxdgb1508Ask">
		select loveOption, loveContent from wxdgb1508_ask with(nolock) where id=#{askId}
    </select>
	
</mapper>