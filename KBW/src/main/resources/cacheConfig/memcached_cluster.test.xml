    <!-- hash algorithm (from com.alisoft.xplatform.asf.cache.memcached.client.SockIOPool):
    	 0: NATIVE_HASH, native hash, String.hashCode();
    	 1: OLD_COMPAT_HASH, original compatibility hashing algorithm (works with other clients)
    	 2: NEW_COMPAT_HASH, new CRC32 based compatibility hashing algorithm (works with other clients)
    	 3: CONSISTENT_HASH, MD5 Based - Stops thrashing when a server added or removed
   	-->
    <socketpool name="sp1" failover="true" initConn="5" minConn="5" maxConn="250" maintSleep="5000"
        nagle="false" socketTO="3000" aliveCheck="true" hashAlgorithm="3">
