<memcached>
    
    <client name="mc1" compressEnable="true" defaultEncoding="UTF-8" socketpool="sp1">
        <errorHandler>com.alisoft.xplatform.asf.cache.memcached.MemcachedErrorHandler</errorHandler>
    </client>
    
    <!--client name="mc1-backup" compressEnable="true" defaultEncoding="UTF-8" socketpool="sp1-backup">
